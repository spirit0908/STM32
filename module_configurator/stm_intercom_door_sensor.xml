<?xml version="1.0"?>
<span>
  <generatorConfig>
    <ConfigName>ConfigTest</ConfigName>
    <outputPath>./output/generate/</outputPath>
    <mcUid>000</mcUid>
    <mcAddress>0x48</mcAddress>
  </generatorConfig> 
  <Interfaces>
    <CAN>
      <enable>true</enable>
    </CAN>
    <SERIAL>
      <enable>true</enable>
    </SERIAL>
  </Interfaces>
  <switch>
    <pushButton id="1">
      <name>doorSensor1</name>
      <port>GPIOB</port>
      <pin>PB5</pin>
      <pushConfig>
        <shortPush>
          <action>LcdMenu_MenuUp</action>
          <address>0x123</address>
        </shortPush>
        <longPush>
          <action>LcdMenu_MenuTop</action>
          <address>0x123</address>
        </longPush>
        <configPush>
          <action>NULL</action>
          <address></address>
        </configPush>
      </pushConfig>
      <ledStatus>
        <activated>no</activated>
        <pushConfigId>0</pushConfigId>
        <fondu>yes</fondu>
      </ledStatus>
    </pushButton>
    <pushButton id="2">
      <name>PB_DOWN</name>
      <port>GPIOB</port>
      <pin>PB7</pin>
      <pushConfig>
        <shortPush>
          <action>LcdMenu_MenuDown</action>
          <address>0x123</address>
        </shortPush>
        <longPush>
          <action>NULL</action>
          <address></address>
        </longPush>
        <configPush>
          <action>NULL</action>
          <address></address>
        </configPush>
      </pushConfig>
      <ledStatus>
        <activated>no</activated>
        <pushConfigId>0</pushConfigId>
        <fondu>yes</fondu>
      </ledStatus>
    </pushButton>
    <pushButton id="3">
      <name>PB_LEFT</name>
      <port>GPIOB</port>
      <pin>PB4</pin>
      <pushConfig>
        <shortPush>
          <action>LcdMenu_MenuDown</action>
          <address>0x123</address>
        </shortPush>
        <longPush>
          <action>NULL</action>
          <address></address>
        </longPush>
        <configPush>
          <action>NULL</action>
          <address></address>
        </configPush>
      </pushConfig>
      <ledStatus>
        <activated>no</activated>
        <pushConfigId>0</pushConfigId>
        <fondu>yes</fondu>
      </ledStatus>
    </pushButton>
    <pushButton id="4">
      <name>PB_RIGHT</name>
      <port>GPIOB</port>
      <pin>PB6</pin>
      <pushConfig>
        <shortPush>
          <action>LcdMenu_MenuDown</action>
          <address>0x123</address>
        </shortPush>
        <longPush>
          <action>NULL</action>
          <address></address>
        </longPush>
        <configPush>
          <action>NULL</action>
          <address></address>
        </configPush>
      </pushConfig>
      <ledStatus>
        <activated>no</activated>
        <pushConfigId>0</pushConfigId>
        <fondu>yes</fondu>
      </ledStatus>
    </pushButton>
  </switch>
  <lights>
    <light id="1">
      <name>Living room</name>
      <type>
        <active>yes</active>
        <dimmer>no</dimmer>
        <timer>no</timer>
        <ledStrip>no</ledStrip>
      </type>
      <port>GPIOA</port>
      <pin>Pin1</pin>
      <defaultBrightness></defaultBrightness>
      <defaultTimer></defaultTimer>
    </light>
    <light id="2">
      <name>Bed room</name>
      <type>
        <active>yes</active>
        <dimmer>yes</dimmer>
        <timer>no</timer>
        <ledStrip>no</ledStrip>
      </type>
      <port>GPIOA</port>
      <pin>Pin2</pin>
      <defaultBrightness>60</defaultBrightness>
      <defaultTimer></defaultTimer>
    </light>
  </lights>
  <heating>
    <heater id="1">
      <name>Living room heater 1</name>
      <zone>LivingRoom</zone>
      <type>elec</type> <!-- elec/chaudiere -->
      <port>GPIOx</port>
      <pin>PinY</pin>
      <temp_default>19.0</temp_default>
      <temp_confort>21.0</temp_confort>
      <mode_gestion>MODE4</mode_gestion>
    </heater>
    <heater id="2">
      <name>Bedroom heater 1</name>
      <zone>BedRoom</zone>
      <type>elec</type> <!-- elec/chaudiere -->
      <port>GPIOx</port>
      <pin>pin5</pin>
      <temp_default>18.0</temp_default>
      <temp_confort>22.0</temp_confort>
      <mode_gestion>MODE4</mode_gestion>
    </heater>
    <thermostat id="1">
      <name>Thermostat living room</name>
      <addr></addr>
    </thermostat>
    <thermostat id="2">
      <name>Thermostat bedroom</name>
      <addr></addr>
    </thermostat>
  </heating>
  <Security>
    <secuElem id='1'>
      <type>door_1</type> <!-- door/magnet/portail/...-->
      <zone>Z1</zone>
      <port>GPIOX</port>
      <pin>PINy</pin>
      <mode>NC</mode> <!-- NC/NO -->
    </secuElem>
  </Security>
</span>
